#!/usr/bin/env bash
set -o xtrace    # print commands
set -o errexit   # abort on nonzero exitstatus
set -o nounset   # abort on unbound variable
set -o pipefail  # don't hide errors within pipes

SOURCE_DIR="${1}"
TARGET_DIR="${2}"
BACKUP_DIR="${3}"

sudo rsync \
   --human-readable \
   --itemize-changes \
   --archive \
   --recursive \
   --delete \
   --delete-after \
   --delete-excluded \
   --backup \
   --backup-dir="${BACKUP_DIR}" \
   "${SOURCE_DIR}" \
   "${TARGET_DIR}"
