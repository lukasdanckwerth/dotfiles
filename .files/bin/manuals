#!/usr/bin/env sh 
if [ $# -eq 0 ]; then
   # ls -l $HOME/.manuals
   printf "\n\n"
   for file in $HOME/.manuals/*; do
      echo - $(basename $file)
   done
    
   printf "\n\n"
   elif [ $# -eq 1 ]; then
      printf "\n"
      cat $HOME/.manuals/$1
      printf "\n\n"
   else
      echo "Invalid number of arguments."
   fi
fi