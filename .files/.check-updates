#!/bin/bash

THE_QUESTION="Do you want to check for updates of dotfiles? [yn] "

while true; do
   if [[ $SHELL_NAME == "bash" ]] ; then 
      echo "Is BASH"
      read -p "$THE_QUESTION" yn
   else
      echo "Is ZSH"
      read "?$THE_QUESTION" yn
   fi
   case $yn in
      [Yy]* ) dotfiles update; break ;;
      [Nn]* ) break ;;
          * ) echo "Please answer yes or no." ;;
   esac
done
